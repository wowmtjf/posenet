<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9895E8"
    android:orientation="vertical">
    <Space
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_weight="5" />

    <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ff000000"
            android:textSize="30sp"
            android:gravity="center_horizontal"
            android:text="My Home Trainer" />
    <Space
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_weight="10" />
    <Button
        android:id="@+id/webview_btn"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:background="@drawable/button"
        android:onClick="ClickButton1"
        android:text="START"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:fontFamily="sans-serif-black"
        android:layout_gravity="center_horizontal"
        tools:ignore="MissingConstraints" />
    <Space
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_weight="5" />
    <Button
        android:id="@+id/saved_vid_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/button2"
        android:onClick="ClickButton2"
        android:text="Saved Video"
        android:layout_gravity="center_horizontal"
        tools:ignore="MissingConstraints" />
    <Space
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_weight="2" />
    <Button
        android:id="@+id/score_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Record"
        android:background="@drawable/button2"
        android:layout_gravity="center_horizontal"
        android:onClick="ClickButton3"

        tools:ignore="MissingConstraints" />
    <Space
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_weight="18" />
    </LinearLayout>