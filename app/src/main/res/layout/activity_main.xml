<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.jerry.WebView.MainActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="        android:layout_width=&quot;match_parent*0.7&quot;&#xA;" />
    </LinearLayout>

    <Button
        android:id="@+id/webview_btn"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:text="영상선택"
        android:onClick="ClickButton1"
        app:layout_constraintBottom_toTopOf="@+id/score_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/saved_vid_btn"
        android:layout_width="match_parent*0.7"
        android:layout_height="145dp"
        android:text="저장된 영상"
        android:onClick="ClickButton2"
        app:layout_constraintTop_toBottomOf="@id/webview_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/score_btn"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/score_btn"
        android:layout_width="120dp"
        android:layout_height="145dp"
        android:text="기록"
        android:onClick="ClickButton3"
        app:layout_constraintLeft_toRightOf="saved_vid_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>